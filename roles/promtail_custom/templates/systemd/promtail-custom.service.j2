[Unit]
Description=Promptail Custom - Log Agent for Loki
After=network.target

[Service]
Type=simple
ExecStart=/opt/promtail-custom/promtail-custom
WorkingDirectory=/opt/promtail-custom
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
User=nobody
Environment=GODEBUG=madvdontneed=1

[Install]
WantedBy=multi-user.target
